<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.panchy.virtualgym"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.panchy.virtualgym.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.panchy.virtualgym.UserLoginActivity"
            android:label="@string/title_activity_user_login" />
        <activity
            android:name="com.example.panchy.virtualgym.ViewPostActivity"
            android:label="@string/title_activity_view_post"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.panchy.virtualgym.ViewExerciseActivity"
            android:label="@string/title_activity_view_exercise"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.panchy.virtualgym.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.panchy.virtualgym.CreateExerciseActivity"
            android:label="@string/title_activity_create_exercise"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>